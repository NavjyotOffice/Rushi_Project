@model Pubsite.Models.Event

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <table class="table col-md-12">
      <tr>
        <td>@Html.DisplayNameFor(model => model.EventType)</td>
        <td>@Html.DisplayFor(model => model.EventType)</td>
      </tr>
      <tr>
        <td>@Html.DisplayNameFor(model => model.ContentDetail.Title)</td>
        <td>@Html.DisplayFor(model => model.ContentDetail.Title)</td>
      </tr>
      <tr>
        <td>@Html.DisplayNameFor(model => model.ContentDetail.Description)</td>
        <td>@Html.DisplayFor(model => model.ContentDetail.Description)</td>
      </tr>
      <tr>
        <td>@Html.DisplayNameFor(model => model.ContentDetail.URL)</td>
        <td>@Html.DisplayFor(model => model.ContentDetail.URL, new { @target = "_blank" })</td>
      </tr>
      <tr>
        <td>@Html.DisplayNameFor(model => model.ContentDetail.Keywords)</td>
        <td>@Html.DisplayFor(model => model.ContentDetail.Keywords)</td>
      </tr>
      <tr>
        <td>@Html.DisplayNameFor(model => model.ContentDetail.CompanyName)</td>
        <td>@Html.DisplayFor(model => model.ContentDetail.CompanyName)</td>
      </tr>
      <tr>
        <td>Banner Image</td>
        @*<td><img src="~/@Url.Content(Model.ContentDetail.Image)" alt="Image" /></td>*@
        <td><img src="~/@Html.DisplayFor(model=>model.ContentDetail.Image)" class="col-md-8" alt="Image" /></td>
      </tr>
      @if (Model.EventType.ToString() == Pubsite.Models.EventType.Conference.ToString())
      {
        <tr>
          <td>@Html.DisplayNameFor(model => model.Address.City)</td>
          <td>@Html.DisplayFor(model => model.Address.City)</td>
        </tr>
        <tr>
          <td>@Html.DisplayNameFor(model => model.Address.State)</td>
          <td>@Html.DisplayFor(model => model.Address.State)</td>
        </tr>
        <tr>
          <td>@Html.DisplayNameFor(model => model.Address.Country)</td>
          <td>@Html.DisplayFor(model => model.Address.Country)</td>
        </tr>
      }
      @if (Model.EventType.ToString() != Pubsite.Models.EventType.OnDemand.ToString())
      {
        <tr>
          <td>@Html.DisplayNameFor(model => model.StartDate)</td>
          <td>@Html.DisplayFor(model => model.StartDate)</td>
        </tr>
        <tr>
          <td>@Html.DisplayNameFor(model => model.EndDate)</td>
          <td>@Html.DisplayFor(model => model.EndDate)</td>
        </tr>
      }
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
